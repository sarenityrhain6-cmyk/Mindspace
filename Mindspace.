// --- Reusable UI Components ---
function Card({ children, className, onClick }: any) {
  return (
    <div onClick={onClick} className={`p-6 rounded-[2rem] border border-black/5 bg-white shadow-sm transition-all active:scale-[0.98] ${className}`}>
      {children}
    </div>
  );
}

function Button({ children, onClick, className }: any) {
  return (
    <button onClick={onClick} className={`w-full py-4 rounded-full bg-[#8BA88E] text-white font-medium transition-all active:scale-95 ${className}`}>
      {children}
    </button>
  );
}
